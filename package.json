{
  "name": "strapped-wordpress-starter",
  "version": "1.0.0",
  "description": "Wordpress Starter Theme initially based on Underscores, Bootstrap 4 (with Sass), Webpack 4.",
  "author": "JPOak",
  "repository": {
    "type": "git",
    "url": "https://github.com/JPOak/strapped-wordpress-starter.git"
  },
  "license": "MIT",
  "scripts": {
    "start": "yarn run clean && webpack --mode development --watch --progress --config src/build/dev.config.js",
    "dev": "yarn run clean && webpack --progress --mode development  --config src/build/dev.config.js",
    "build": "webpack --progress --mode production  --config src/build/prod.config.js",
    "clean": "rimraf dist/manifest.json dist/styles/*"
  },
  "dependencies": {
    "@alpinejs/focus": "^3.15.0",
    "alpinejs": "^3.15.0",
    "include-media": "^1.4.10",
    "smoothscroll-polyfill": "^0.4.4"
